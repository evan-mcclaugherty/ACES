extends layout
block content
  div#singleGame
    script(src="/javascripts/socket.io.slim.js")
    div.title
      h1= game.title
      img(src= game.photo, alt= game.title)
    div#nogame
      button#beginBtn(onclick="startGame()") Begin a Game
      each winner in winners
        p #{winner.username} has won #{winner.wins} times.
    div#game(hidden)
      h2#title
      div.joinLeave
        button#join(onclick="joinGame()") Join This Game
        button#leave(onclick="leaveGame()" hidden) Leave This Game
      form(id="form")
        table
          thead
            tr
              th Player
              th Winner
          tbody#playerList
        input(type="submit", value="Select Winner")
      button#beginBtn(onclick="endGame()") Close This Game
    div#winner(hidden class="winner")
    script.
      let title = '#{game.title}';
      let user = '#{user.username}';
    script
      include singleGame.js
